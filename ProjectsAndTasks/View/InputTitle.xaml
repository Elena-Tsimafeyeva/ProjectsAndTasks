<mah:MetroWindow x:Class="ProjectsAndTasks.View.InputTitle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectsAndTasks.ViewModel"
        mc:Ignorable="d"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="InputTitle" Height="450" Width="800">
    <Window.DataContext>
        <local:InputTitleVM/>
    </Window.DataContext>
    <Grid Background="Gray">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30" Background="LightGray" CornerRadius="10">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Background="#80FFFFFF">
                <TextBlock Width="50" Text="Title:"/>
                <TextBox Width="200" Text="{Binding Title}"/>
                    </StackPanel>
                    <Button Content="Save" Margin="5" Width="70" Command="{Binding SaveTitleCommand}"/>
                    </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
