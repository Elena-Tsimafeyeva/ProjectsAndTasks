<mah:MetroWindow x:Class="ProjectsAndTasks.View.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectsAndTasks.View"
        mc:Ignorable="d"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Profile" Height="450" Width="800">
    <Grid Background="Gray">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30" Background="LightGray" CornerRadius="10">
            <StackPanel>
            <Image Height="40" Width="40" Margin="5" Source="D:\Лена\Стажировка\Изучение C# 12 и .NET 8\4\ProjectsAndTasks\ProjectsAndTasks\Images\Profile.png" Stretch="UniformToFill"/>
                <StackPanel Orientation="Horizontal" Margin="5" Background="#80FFFFFF">
                    <TextBlock Text="First name" Height="20" Width="60"/>
                    <TextBox Height="20" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" Background="#80FFFFFF">
                    <TextBlock Text="Last name" Height="20" Width="60"/>
                    <TextBox Height="20" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" Background="#80FFFFFF">
                    <TextBlock Text="Mail" Height="20" Width="60"/>
                    <TextBox Height="20" Width="200"/>
                </StackPanel>
                <Button Content=" Save "/>
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
