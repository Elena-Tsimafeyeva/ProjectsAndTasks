<mah:MetroWindow x:Class="ProjectsAndTasks.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectsAndTasks.ViewModel"
        mc:Ignorable="d"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Login" Height="450" Width="800">
    <Window.DataContext>
        <local:LoginVM/>
    </Window.DataContext>
    <Grid Background="Gray">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30" Background="LightGray" CornerRadius="10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Height="40" Width="40" Margin="5" Source="pack://application:,,,/Images\Profile.png" Stretch="UniformToFill"/>
                <StackPanel Orientation="Horizontal" Margin="5" Background="#80FFFFFF">
                    <TextBlock Height="20" Width="55" Text="Login:"/>
                    <TextBox Height="20" Width="200" Text="{Binding Login}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" Background="#80FFFFFF">
                    <TextBlock Height="20" Width="55" Text="Password:"/>
                    <TextBox Height="20" Width="200" Text="{Binding Password}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Content=" Log in " Width="70" Margin="0,0,5,0" Command="{Binding LogInCommand}"/>
                    <Button Content=" Register " Width="70" Margin="5,0,0,0" Command="{Binding RegisterCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
